@page "/databindingdemo"
@inherits DataBindingDemoBase

<h1>Data Binding Demo</h1>
<hr />
<h3>One way Data Binding</h3>
@* Binding to Value attribute *@
<div>
    <b>Name :</b>  @Name
</div>

<div>
    <b>Name with salutation :</b>  @((Gender == "Male")? "Mr. " +  Name : "Mrs. " + Name)
</div>
<div>
    <b>Name :</b>  <input value="@Name"/> 
</div>

<hr />

<div>
    <b>Name :</b>  <input value="@Name" @onchange = "@(e => {Name = e.Value.ToString();})"/>
</div>

<div>
    <b>Name :</b>  <input @bind = "Name" />
</div>
<div>
    <b>Name :</b>  <input @bind="Name" @bind:event="oninput"/>
</div>

<hr />

@* Binding to Element attribute *@
<h3>Binding to an Html Element</h3>
<div>
    <b>Color :</b>  <input @bind="Color" />
</div>
<div @bind-style="Color" @bind-style:event="onchange">
    <h3>The background Color of this text changes.</h3>
</div>

<hr />

<h3>Two-way Data binding simple example</h3>
<h4>Description</h4>

<div>
    <textarea @bind="Description"  @bind:event="oninput" style="width:500px"></textarea>
</div>

<div> 
    Count: @Description.Length
</div>
